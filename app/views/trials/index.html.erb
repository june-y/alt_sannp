<p id="notice"><%= notice %></p>

<h1>Trials</h1>

<table>
  <thead>
    <tr>
      <th>Trial ID</th>
      <th>Name</th>
      <th>Client ID</th>
      <th>Items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trials.each do |trial| %>
      <tr>
        <td><%= trial.id %></td>
        <td><%= trial.name %></td>
        <td><%= trial.client_id %></td>
        <td><%= trial.items.pluck(:id) %></td>
        <td><%= link_to 'Show', trial %></td>
        <td><%= link_to 'Edit', edit_trial_path(trial) %></td>
        <td><%= link_to 'Destroy', trial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

